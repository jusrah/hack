#approvePanel(hidden).panel
	h1 Assets for Approval
	hr
	
	br
	#approveModal.modalDialog
			div
				.modal-header
					h2 Filter assets
					hr
				.modal-content
					form#approveFilter
						label(for="asset_name") NAME
						input#asset_name.approve-filter(type="text" name="name")
						br
						label(for="asset_street") STREET
						input#asset_street.approve-filter(type="text" name="adrStreet")
						br
						label(for="asset_city") CITY
						input#asset_city.approve-filter(type="text" name="adrCity")
						br
						label(for="asset_postcode") PCODE
						input#asset_postcode.approve-filter(type="text" name="adrPostcode")
						br
						label(for="asset_state") STATE
						input#asset_state.approve-filter(type="text" name="adrState")
						br
						a.filter-button(href="#close" title="Close") Close
						
	#openapproves
		br
		a.filter-button(href="#approveModal") Filter Assets
		br
		br
		table#approvesTable.tablesorter
			thead
				tr 
					TH: a.sort-selector(sort="date") DATE
						span.fa.fa-arrow-up.sort-indicator
					th: a.sort-selector(sort="name") NAME
					th: a.sort-selector(sort="adrStreet") STREET
					th: a.sort-selector(sort="adrCity") CITY
					th: a.sort-selector(sort="adrPostcode") POSTCODE
					th: a.sort-selector(sort="adrState") STATE
					th: a.sort-selector(sort="qtyOwned") QTY
					th: a.sort-selector(sort="mktval")  MARKET VALUE
					th: a.sort-selector(sort="issuer")  ISSUER
					th ACTION
			tbody#approvesBody